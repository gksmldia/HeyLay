 	<select id="selectKeywordList" parameterType="int" resultType="keywordsVO">
		SELECT max(no), keyword, to_char(max(reg_date), 'yyyy-mm-dd') regDate
			FROM q_keywords
			WHERE status='Y' and member_no = #{ memberNo }
            GROUP by keyword
			ORDER BY regDate DESC
			LIMIT 50
	</select> 
	
	<update id="updateStatus" parameterType="int">
		UPDATE q_keywords
			SET status='N'
			WHERE keyword = #{ keyword }
	</update>
	
	<insert id="insertCardToSave" parameterType="savedVO">
		INSERT INTO q_contents_saved (no, member_no, contents_no, directory_no)
		VALUES ( NEXTVAL('q_contents_saved_no'), #{memberNo}, #{contentsNo}, #{directoryNo} )
	</insert>
	
	
	
	<!-- Directory -->
	<select id="selectNextDirNo" resultType="int">
		SELECT NEXTVAL('q_directory_no')
	</select>
	
	<insert id="insertDir" parameterType="directoryVO">
		INSERT INTO q_directory (no, name, member_no)
		VALUES ( #{no}, #{name}, #{memberNo} )
	</insert>
	
	<select id="selectDirList" parameterType="int" resultType="directoryVO">
		SELECT  no, name, reg_date, member_no 
		FROM q_directory
		WHERE member_no = #{userNo}
	</select>
	
